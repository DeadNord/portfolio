{
  "include": [
    "src",
    "env.d.ts",
    "tsconfig.json",
    "arc/screens/mainScreen/ModulesScreen.tsx",
    "ar/tasksList",
    "ar/MenuScreen.tsx"
  ],
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "noImplicitAny": false,
    "paths": {
      "src/*": ["./src/*"]
    }
  }
}
